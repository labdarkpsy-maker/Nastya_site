---
import BaseLayout from "../layouts/BaseLayout.astro";

const music = [
  { year: "1998", title: "Started music production", detail: "Early experimentation with Rebirth, FL Studio, Sonar, Ableton. Later settled on Cubase." },
  { year: "2005", title: "Began sharing full live sets", detail: "Live performance focus begins." },
  { year: "2010s", title: "International touring and festival stages", detail: "Performed across multiple countries and major psychedelic festivals." },
  { year: "2010s-2025", title: "Releases across many labels", detail: "Multiple aliases and collaborations across darkpsy, forest, downtempo, DnB and more." },
];

const tech = [
  { year: "2000s", title: "Sound and AV work expands", detail: "Live sound, audiovisual systems, technical operations." },
  { year: "2010s", title: "Work in international congress environments", detail: "Technical execution for high-pressure professional contexts." },
  { year: "2010s-2025", title: "Visual post-production", detail: "Image editing, restoration, AI cleanup/upscale, compositing for promos and flyers." },
  { year: "2010s-2025", title: "Video editing and motion work", detail: "Edits for promo, events and multimedia contexts." },
  { year: "Now", title: "Teaching in Porto", detail: "Currently teaching music production at Ponto FrequÃªncia. Mentorship-first approach." },
];
---

<BaseLayout title="Timeline">
  <section class="section">
    <h1>Timeline</h1>
    <p class="subtitle">
      Two parallel tracks - music and technical/visual work - evolving side by side since 1998.
    </p>
  </section>

  <section class="section timeline">
    <div class="timeline-grid">
      <div class="timeline-col">
        <h2 class="timeline-title">Music</h2>

        <ol class="timeline-list">
          {music.map((item) => (
            <li class="timeline-item">
              <div class="timeline-year">{item.year}</div>
              <div class="timeline-body">
                <div class="timeline-heading">{item.title}</div>
                <div class="timeline-detail">{item.detail}</div>
              </div>
            </li>
          ))}
        </ol>
      </div>

      <div class="timeline-col">
        <h2 class="timeline-title">Technical / Visual</h2>

        <ol class="timeline-list">
          {tech.map((item) => (
            <li class="timeline-item">
              <div class="timeline-year">{item.year}</div>
              <div class="timeline-body">
                <div class="timeline-heading">{item.title}</div>
                <div class="timeline-detail">{item.detail}</div>
              </div>
            </li>
          ))}
        </ol>
      </div>
    </div>
  </section>

  <section class="section">
    <p class="muted">
      Note - this timeline is intentionally high-level. It highlights key milestones rather than listing every release or event.
    </p>
  </section>
</BaseLayout>
