---
import "../styles/main.css";

const {
  title = "Renato Moreira",
  description = "Renato Moreira – Lisbon-born, Porto-based. Music producer, live performer, sound & AV specialist."
} = Astro.props;
// current page path (e.g. /music, /teaching, /timeline)
const path = Astro.url.pathname;

// helper to check if a nav link is active
const isActive = (href: string) =>
  path === href || path.startsWith(href + "/");

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>

  <body>
    <header class="site-header">
      <div class="wrap header-inner">
        <a class="brand" href="/">Anastasia Bessonova</a>
        <nav class="nav">
          <a class={isActive("/work") ? "active" : ""} href="/work">Work</a>
          <a class={isActive("/process") ? "active" : ""} href="/process">Process</a>
          <a class={isActive("/about") ? "active" : ""} href="/about">About</a>
          <a class={isActive("/contact") ? "active" : ""} href="/contact">Contact</a>
       
        </nav>        
      </div>
    </header>

    <main class="wrap">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="wrap footer-inner">
        <div>© {new Date().getFullYear()} Renato Moreira</div>
        <div class="footer-links">
          <a href="www" target="_blank" rel="noreferrer">Site</a>
        </div>
      </div>
    </footer>
  </body>
</html>
